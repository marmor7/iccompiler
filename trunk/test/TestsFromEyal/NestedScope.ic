class A{

	int x;
	
	void f() {
	
		x = 6;
		Library.println("f: field x");
		Library.printi(x); //6
		Library.println("");
		
		int x = x + 1;
		
		Library.println("f: var x");
		Library.printi(x);  //7
		Library.println("");
		
		if (true) {
			int x = 2;
			Library.println("f: in if var x");
			Library.printi(x); //2
			Library.println("");
		}
		
		x = 2*x; //14
		Library.println("f: var x");
		Library.printi(x); //14
		Library.println("");
	
	}
	
	static void main(string[] args){
		
		int x = 1;
		
		Library.println("Main: var x");
		Library.printi(x); //1
		Library.println("");
		
		if (true) {
			int x = 2;
			Library.println("Main: in if var x"); 
			Library.printi(x); //2
			Library.println("");
		}
		
		x = x + 9; //10
		Library.println("Main: var x"); 
		Library.printi(x);  //10
		Library.println("");
		
		A a = new A();
		a.x = -1;
		Library.println("Main: field x");
		Library.printi(a.x); //-1
		Library.println("");
		
		a.f();
	}
}
