class Loop{

	Util objUtil;

	void sum_of_sums(int n){
		int start = n;
		int sum = 0;
		while (n > 0){
			sum = sum + objUtil.sum1ToN(n);
			n = n - 1;
		}
		Library.print("The sum of sums from 1 to ");
		Library.printi(start);
		Library.print(" is: ");
		Library.printi(sum);
		Library.println("");
	}
	
	static void sum_of_factorials(int n){
		int start = n;
		int sum = 0;
		while (n > 0){
			int factorial = 1;
			int i = 1;
			while (i <= n){
				factorial = factorial * i;
				i = i + 1;
				if (i == 1){
					break;
				} else {
					continue;
				}
			}
			Library.print("The factorial of ");
			Library.printi(n);
			Library.print(" is: ");
			Library.printi(factorial);
			Library.println("");
			sum = sum +  factorial;
			n = n - 1;
		}
		Library.print("The sum of factorials from 1 to ");
		Library.printi(start);
		Library.print(" is: ");
		Library.printi(sum);
		Library.println("");
	}

	static void main(string[] args){
		Loop objLoop = new Loop();
		objLoop.objUtil = new Util();	
		objLoop.sum_of_sums(10);
		Loop.sum_of_factorials(10);	
	}


}


class Util{

	int sum1ToN(int n){
		int sum = 0;
		int start = n;
		while (n > 0){
			sum = sum + n;
			n = n - 1;
		}
		Library.print("The sum from 1 to ");
		Library.printi(start);
		Library.print(" is: ");
		Library.printi(sum);
		Library.println("");
		return sum;
	}

}
